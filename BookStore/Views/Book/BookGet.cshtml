@model BookStore.Models.Book;
@{
    ViewData["Title"] = "BookGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>FoodGet</h1>

@using (Html.BeginForm("BookUpdate", "Book", FormMethod.Post))
{
    <br />
    @Html.LabelFor(x=>x.Id)
    @Html.TextBoxFor(x=>x.Id,new {@class="form-control"})
    <br />
    <br />
    @Html.LabelFor(x=>x.Name)
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    <br />
    @Html.LabelFor(x=>x.Price)
    @Html.TextBoxFor(x=>x.Price,new {@class="form-control"})
    <br />
    @Html.LabelFor(x=>x.Stock)
    @Html.TextBoxFor(x=>x.Stock,new {@class="form-control"})
    <br />
    @Html.LabelFor(x=>x.Description)
    @Html.TextBoxFor(x=>x.Description,new {@class="form-control"})
    <br />
    @Html.LabelFor(x=>x.ImageUrl)
    @Html.TextBoxFor(x=>x.ImageUrl,new {@class="form-control"})
    <br />
    @Html.LabelFor(x=>x.Category.CategoryName)
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.cat1,new {@class="form-control"})
    <br />
    <button class="btn btn-success">Submit</button>
}

